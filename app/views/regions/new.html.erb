<%= form_for @region, :url => { :controller => 'regions', :action => 'create' } do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :min_pos, "Min Pos" %>
    <%= f.text_field :min_pos %>

    <%= f.label :max_pos, "Max Pos" %>
    <%= f.text_field :max_pos %>

    <%= f.label :owners, "Owners" %>
    <%= f.text_field :owners %>

    <%= f.label :members, "Members" %>
    <%= f.text_field :members %>

    <%= f.submit "Create" %>
<% end %>
