<table class="ui sortable table segment">
  <thead>
    <tr>
      <th>Area</th>
      <th>Name</th>
      <th>Type</th>
      <th>Pos</th>
      <th>Priority</th>
      <th>Owners</th>
      <th>Members</th>
      <th>Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @regions.each do |region| %>
    <tr>
      <td><%= region.area %></td>
      <td><%= region.name %></td>
      <td><%= region.type %></td>
      <td>
        Min: <%= region.min_pos %> <br/>
        Max: <%= region.max_pos %>
      </td>
      <td><%= region.priority %></td>
      <td><%= region.owners %> ...</td>
      <td><%= region.members %> ...</td>
      <td>Edit</td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><th colspan="3">
      <div class="ui blue labeled icon button"><i class="user icon"></i> Add User</div>
    </th>
  </tr></tfoot>
</table>

<%= content_for :footer_scripts do %>
  <script type="text/javascript">
    (function(){
      ('.sortable').tablesort();
    });
  </script>
<% end %>
