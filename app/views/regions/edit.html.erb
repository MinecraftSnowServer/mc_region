		<tbody>
			<tr>
				<td style="vertical-align: top;">
					<p>
						<i class="question icon link popup" data-content="Use allow to have this region treated as a region that doesn't check build permission (use this to make simple no-PVP, etc. zones)."></i>
						<label>passthrough</label>
					</p>
				</td>
				<td class="ui vertical " style="padding-left: 1em;">
					<div class="inline fields">
						<div class="field">
							<div class="ui radio checkbox">
								<%= f.radio :flags.passthrough, :none, checked: "checked" %>
								<label>None</label>
							</div>
						</div>
						<div class="field">
							<div class="ui radio checkbox">
								<%= f.radio :flags.passthrough, :allow%>
								<label>Allow</label>
							</div>
						</div>
						<div class="field">
							<div class="ui radio checkbox">
								<%= f.radio :flags.passthrough, :deny%>
								<label>Deny</label>
							</div>
						</div>
					</div>
